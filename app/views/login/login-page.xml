<?xml version="1.0" encoding="utf-8"?>
<Page xmlns="http://schemas.nativescript.org/tns.xsd" navigatingTo="onNavigatingTo" class="page">
    <ActionBar title="Login" class="action-bar" />
    
    <StackLayout class="p-4">
        <Label text="Welcome Back!" class="text-2xl font-bold text-center mb-4" />
        
        <TextField hint="Email" text="{{ email }}" keyboardType="email" autocorrect="false" autocapitalizationType="none" class="input mb-2" />
        
        <TextField hint="Password" text="{{ password }}" secure="true" class="input mb-4" />
        
        <Button text="Login" tap="{{ onLogin }}" class="btn btn-primary mb-2" />
        
        <Button text="Create Account" tap="{{ onRegister }}" class="btn btn-secondary" />
        
        <Label text="{{ errorMessage }}" class="text-red-500 text-center mt-2" textWrap="true" />
    </StackLayout>
</Page>